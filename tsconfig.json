{
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./dist",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "ES6",
    "allowJs": true,
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "jsx": "react-jsx",
    "lib": [
      "DOM",
      "ES5",
      "ES6",
      "ES7",
      "ES2021",
    ]
  },
  "exclude": [
    "**/*.js"
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
}
